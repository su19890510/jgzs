<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_bg"
    android:orientation="vertical"
    android:layout_marginTop="20dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
   >

    <TextView
        android:id="@+id/plantDetailSecondTittle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="10dip"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center"
        android:text="水仙"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="3dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/listline"
        android:layout_weight="0.5" />

  

         <android.support.v4.view.ViewPager
            android:id="@+id/plantDetailViewPager"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="10dip"
        android:background="#ffffff"
        android:layout_weight="20" />

      <ImageView   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_d_2"
        android:layout_weight="0.6" />

       <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_d_1"
        android:layout_weight="0.6" />
 
       <ImageButton  android:id="@+id/bus_info_detail_but"
        android:layout_width="fill_parent"
        android:layout_height="40dip" 
        android:background="#00000000"
        android:src="@drawable/arrow_down" 
        android:layout_weight="0.5"/>
        <TextView  android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginBottom="10dip"
	        android:text="别名是：" 
	        android:textColor="#000000"
	        android:textSize="15sp" 
	        android:id="@+id/bus_info_explor"
	        android:visibility="gone"  
	        android:layout_weight="5"/>
        
       
       
     
</LinearLayout>