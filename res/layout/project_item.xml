<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/project_list_item_bg"
    android:orientation="horizontal" >

    <!-- 头像 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_weight="0.5"
        android:orientation="vertical" >
        <TextView
        android:id="@+id/listItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="10dip"
        android:layout_weight="0.3"
        android:gravity="center_vertical|center"
        android:text="水仙"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"       
        android:src="@drawable/listline"
        android:layout_weight="0.5" />

  

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/test1" />
<ImageView
        android:id="@+id/imageView23"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"       
        android:src="@drawable/listline"
        android:layout_weight="0.5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
              
             <TextView
            android:id="@+id/project_provider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上传者：xxli"
            android:gravity="center"
              android:textColor="#3b3b3b"
            android:textSize="12.5sp"
            />
             
              <TextView
            android:id="@+id/project_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="时间：2015-09-20 12:29"
            android:gravity="center"
            android:textColor="#3b3b3b"
            android:textSize="12.5sp"
             />
        </LinearLayout>

       

    </LinearLayout>

</LinearLayout>